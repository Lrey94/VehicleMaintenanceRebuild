<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Vehicle_maintenance.Navigation.TabLayout" parent="Widget.Material3.TabLayout">
        <item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="tabTextColor">@color/tabTextBlue</item>
        <item name="tabBackground">@color/white</item>
        <item name="tabTextAppearance">@style/VehicleMaintenance.Font.TabLayout</item>
        <item name="tabIconTint">@color/tabIconBlue</item>
        <item name="tabIndicator">@drawable/underline_tab_layout</item>
        <item name="tabIndicatorColor">@color/tabIconBlue</item>
    </style>

    <style name="VehicleMaintenance.Font.TabLayout" parent="TextAppearance.Material3.TitleLarge">
        <item name="fontFamily">@font/tilt_neon</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="VehicleMaintenance.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="titleTextAppearance">@font/tilt_neon</item>
        <item name="navigationIconTint">@color/black</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
    </style>

</resources>