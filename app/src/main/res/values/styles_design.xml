<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ShapeAppearanceOverlay.App.circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">25%</item>
    </style>

    <style name="VehicleMaintenance.Shape.ButtonPrimary" parent="ShapeAppearance.Material3.Corner.Full">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="VehicleMaintenance.Shape.ButtonLarge" parent="ShapeAppearance.Material3.Corner.Full">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20%</item>
    </style>

    <style name="VehicleMaintenance.Button.Primary" parent="Widget.Material3.Button.ElevatedButton">
        <item name="backgroundTint">@color/button_colour</item>
        <item name="rippleColor">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="shapeAppearance">@style/VehicleMaintenance.Shape.ButtonPrimary</item>
        <!--suppress CheckTagEmptyBody - Overridden to remove default max width-->
        <item name="android:maxWidth"></item>
        <item name="fontFamily">@font/tilt_neon</item>
        <item name="android:fontFamily">@font/tilt_neon</item>
    </style>

    <style name="VehicleMaintenance.Button.Large" parent="Widget.Material3.Button.ElevatedButton">
        <item name="backgroundTint">@color/button_colour</item>
        <item name="rippleColor">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="shapeAppearance">@style/VehicleMaintenance.Shape.ButtonLarge</item>
        <!--suppress CheckTagEmptyBody - Overridden to remove default max width-->
        <item name="android:maxWidth"></item>
        <item name="fontFamily">@font/tilt_neon</item>
        <item name="android:fontFamily">@font/tilt_neon</item>
    </style>

    <style name="VehicleMaintenance.BottomSheetDialogStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@color/recycler_view_list_item_background</item>
    </style>

    <style name="VehicleMaintenance.BottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/VehicleMaintenance.BottomSheetDialogStyle</item>
    </style>

    <style name="VehicleMaintenance.LikeCheckbox" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="buttonTint">@color/red</item>
        <item name="simpleItemSelectedColor">@color/black</item>
    </style>

</resources>